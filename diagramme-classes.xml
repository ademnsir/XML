<?xml version="1.0" encoding="UTF-8"?>
<class-diagram>
    <enums>
        <enum name="UserRole">
            <value>ADMIN</value>
            <value>DEVELOPPER</value>
            <value>INFRA</value>
        </enum>
        <enum name="UserStatus">
            <value>ACTIF</value>
            <value>EN_ATTENTE</value>
            <value>SUSPENDU</value>
        </enum>
        <enum name="Status">
            <value>TO_DO</value>
            <value>IN_PROGRESS</value>
            <value>COMPLETED</value>
        </enum>
        <enum name="Priorite">
            <value>LOW</value>
            <value>MEDIUM</value>
            <value>HIGH</value>
        </enum>
        <enum name="Etat">
            <value>EXISTING_PROJECT</value>
            <value>FROM_SCRATCH</value>
        </enum>
        <enum name="Priority">
            <value>LOW</value>
            <value>HIGH</value>
        </enum>
        <enum name="LivrableType">
            <value>BACKEND</value>
            <value>FRONTEND</value>
            <value>RAPPORT</value>
            <value>SCRIPT</value>
        </enum>
        <enum name="EnvType">
            <value>DEV</value>
            <value>PREPROD</value>
            <value>PROD</value>
            <value>TEST</value>
            <value>AUTRE</value>
        </enum>
        <enum name="ProtType">
            <value>SSH</value>
            <value>TELNET</value>
            <value>RDP</value>
            <value>HTTP</value>
            <value>HTTPS</value>
            <value>FTP</value>
            <value>SMTP</value>
            <value>TEST</value>
            <value>AUTRE</value>
        </enum>
        <enum name="ComponentType">
            <value>BDD</value>
            <value>BACKEND</value>
            <value>FRONTEND</value>
            <value>AUTRE</value>
        </enum>
        <enum name="CongeType">
            <value>MALADIE</value>
            <value>CONGE</value>
            <value>DECES</value>
            <value>MARIAGE</value>
            <value>AUTRES</value>
        </enum>
        <enum name="CongeStatus">
            <value>PENDING</value>
            <value>APPROVED</value>
            <value>REJECTED</value>
        </enum>
    </enums>

    <classes>
        <class name="User">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="username" type="string"/>
                <attribute name="password" type="string"/>
                <attribute name="firstName" type="string"/>
                <attribute name="lastName" type="string"/>
                <attribute name="email" type="string"/>
                <attribute name="matricule" type="string"/>
                <attribute name="photo" type="string"/>
                <attribute name="role" type="UserRole"/>
                <attribute name="status" type="UserStatus"/>
                <attribute name="hireDate" type="Date"/>
                <attribute name="endDate" type="Date"/>
            </attributes>
            <relations>
                <relation type="ManyToMany" target="Project"/>
                <relation type="OneToMany" target="Task"/>
                <relation type="OneToMany" target="Conge"/>
                <relation type="OneToMany" target="Notification"/>
                <relation type="OneToMany" target="Stagiaire"/>
            </relations>
        </class>

        <class name="Project">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="name" type="string"/>
                <attribute name="status" type="Status"/>
                <attribute name="priorite" type="Priorite"/>
                <attribute name="etat" type="Etat"/>
                <attribute name="linkprojet" type="string"/>
                <attribute name="description" type="string"/>
                <attribute name="estimatedEndDate" type="Date"/>
            </attributes>
            <relations>
                <relation type="OneToMany" target="Task"/>
                <relation type="OneToMany" target="Livrable"/>
                <relation type="OneToMany" target="Environnement"/>
                <relation type="OneToMany" target="Checklist"/>
                <relation type="ManyToMany" target="User"/>
            </relations>
        </class>

        <class name="Task">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="title" type="string"/>
                <attribute name="description" type="string"/>
                <attribute name="status" type="string"/>
                <attribute name="priority" type="Priority"/>
                <attribute name="type" type="string"/>
                <attribute name="customType" type="string"/>
                <attribute name="creationDate" type="Date"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="Project"/>
                <relation type="ManyToOne" target="User"/>
            </relations>
        </class>

        <class name="Stagiaire">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="firstName" type="string"/>
                <attribute name="lastName" type="string"/>
                <attribute name="email" type="string"/>
                <attribute name="specialite" type="string"/>
                <attribute name="dureeStage" type="number"/>
                <attribute name="dateDebut" type="Date"/>
                <attribute name="dateFin" type="Date"/>
                <attribute name="photo" type="string"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="User"/>
            </relations>
        </class>

        <class name="Livrable">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="label" type="string"/>
                <attribute name="description" type="string"/>
                <attribute name="type" type="LivrableType"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="Project"/>
                <relation type="ManyToMany" target="Technologie"/>
            </relations>
        </class>

        <class name="Technologie">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="label" type="string"/>
                <attribute name="description" type="string"/>
                <attribute name="version" type="string"/>
                <attribute name="language" type="string"/>
            </attributes>
            <relations>
                <relation type="ManyToMany" target="Livrable"/>
            </relations>
        </class>

        <class name="Environnement">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="nomServeur" type="string"/>
                <attribute name="systemeExploitation" type="string"/>
                <attribute name="ipServeur" type="string"/>
                <attribute name="port" type="number"/>
                <attribute name="type" type="EnvType"/>
                <attribute name="Ptype" type="ProtType"/>
                <attribute name="componentType" type="ComponentType"/>
                <attribute name="cpu" type="string"/>
                <attribute name="ram" type="string"/>
                <attribute name="stockage" type="string"/>
                <attribute name="logicielsInstalled" type="string[]"/>
                <attribute name="nomUtilisateur" type="string"/>
                <attribute name="motDePasse" type="string"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="Project"/>
            </relations>
        </class>

        <class name="Checklist">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="spec" type="string"/>
                <attribute name="frs" type="string"/>
                <attribute name="lienGitFrontend" type="string"/>
                <attribute name="lienGitBackend" type="string"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="Project"/>
            </relations>
        </class>

        <class name="Conge">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="userId" type="number"/>
                <attribute name="matricule" type="string"/>
                <attribute name="service" type="string"/>
                <attribute name="responsable" type="string"/>
                <attribute name="type" type="CongeType"/>
                <attribute name="startDate" type="Date"/>
                <attribute name="endDate" type="Date"/>
                <attribute name="dateReprise" type="Date"/>
                <attribute name="telephone" type="string"/>
                <attribute name="adresse" type="string"/>
                <attribute name="interim1" type="string"/>
                <attribute name="interim2" type="string"/>
                <attribute name="firstName" type="string"/>
                <attribute name="lastName" type="string"/>
                <attribute name="status" type="CongeStatus"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="User"/>
            </relations>
        </class>

        <class name="Notification">
            <attributes>
                <attribute name="id" type="number"/>
                <attribute name="message" type="string"/>
                <attribute name="isRead" type="boolean"/>
                <attribute name="createdAt" type="Date"/>
            </attributes>
            <relations>
                <relation type="ManyToOne" target="User"/>
            </relations>
        </class>
    </classes>
</class-diagram>
